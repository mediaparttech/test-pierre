<div class="card-user shadow-card">
  <div class="card-user-header mb-600">
    <div class="bio">
      <div class="bio__body">
        <div class="avatar">
          {% if card.user.avatar %}
            <img src="{{ card.user.avatar }}" alt="{{ card.user.firstname }} {{ card.user.name }}">
          {% endif %}
        </div>
        <div class="bio__name">
          <div class="heading-product-01 text-product">{{ card.user.firstname }} {{ card.user.name }}</div>
          <div class="ui-body-product-01 text-product-secondary">Abonné&middot;e Mediapart</div>
        </div>
      </div>
      <div class="bio__footer ui-body-product-01 text-product">{{ card.user.job }}</div>
    </div>
  </div>
  <div class="card-user-footer">
